{
  "font": {
    "size": {
      "extreme-small": {
        "$type": "fontSize",
        "$value": "0.75rem"
      },
      "small": {
        "$type": "fontSize",
        "$value": "1rem"
      },
      "medium": {
        "$type": "fontSize",
        "$value": "1.5rem"
      },
      "large": {
